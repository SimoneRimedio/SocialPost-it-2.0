<!-- Home.ejs -->
<%- include('../public/template/header.ejs'); %>

<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="row">
    <div class="col-md-6 d-flex justify-content-center align-items-center">
      <div class="wrapper" id="form1">
        <div class="text-center mt-4 name">
          <h1>Create post-it</h1>
          <br />
          <p>Fill in the data below</p>
        </div>
        <form class="p-3 mt-3" method="post" action="/scrivi">
          <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            <input type="text" name="name" id="name" placeholder="Name" required />
          </div>
          <div class="form-field d-flex align-items-center">
            <span class="fas fa-key"></span>
            <input type="text" name="message" id="message" placeholder="Message" required/>
          </div>
          <button class="btn mt-3" type="submit">Generate</button>
          <a class="btn mt-3" href="/postit" role="button">Post It</a>
        </form>
      </div>
    </div>
    <div class="col-md-6 d-flex justify-content-center align-items-center">
      <div id="form2" class="wrapper">
        <div class="text-center mt-4 name">
          <h1>Log in to your account</h1>
          <br />
          <p>Fill in the data below</p>
        </div>
        <form class="p-3 mt-3" method="post" action="/login">
          <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            <input type="text" name="username" id="username" placeholder="Userame" required />
          </div>
          <div class="form-field d-flex align-items-center">
            <span class="fas fa-key"></span>
            <input type="password" name="password" id="password" placeholder="Password" required/>
          </div>
          <button class="btn mt-3" type="submit">Log In</button>
          <a class="btn mt-3" href="/register" role="button">Registrati</a>
        </form>
      </div>
    </div>
    <form action="/register" method="post">
      <div>
          <label for="username">Username:</label>
          <input type="text" name="username" required>
      </div>
      <div>
          <label for="password">Password:</label>
          <input type="password" name="password" required>
      </div>
      <div>
          <label for="confirmPassword">Conferma Password:</label>
          <input type="password" name="confirmPassword" required>
      </div>
      <div>
          <button type="submit">Registrati</button>
      </div>
  </form>
  </div>
</div>

<%- include('../public/template/footer.ejs'); %>
